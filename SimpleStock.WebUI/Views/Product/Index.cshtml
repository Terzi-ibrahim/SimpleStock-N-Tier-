@model IEnumerable<SimpleStock.Application.DTOs.ProductDto>

<h2>Ürünler</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Yeni Ürün</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Birim Fiyat</th>
            <th>Stok</th>         
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.UnitPrice</td>
                <td>@item.StockQuantity</td>              
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<SimpleStock.Application.DTOs.CategoryDto>

<h2>Kategoriler</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Yeni Kategori</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? new List<SimpleStock.Application.DTOs.CategoryDto>())
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
